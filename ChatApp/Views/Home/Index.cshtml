@{
    ViewData["Title"] = "Chat";
}

<div class="chat-container">
    <!-- Login Form -->
    <div class="login-panel" id="loginForm">
        <div class="login-content">
            <h3>ðŸ’¬ Chat</h3>
            <input type="text" class="form-control mb-3" id="userName" placeholder="Your name" maxlength="50">
            <input type="text" class="form-control mb-3" id="roomNumber" placeholder="Room (123)" maxlength="20">
            <button class="btn btn-primary w-100" id="joinBtn">Join Chat</button>
        </div>
    </div>

    <!-- Chat Interface -->
    <div class="chat-panel" id="chatInterface" style="display: none;">
        <div class="chat-main">
            <div class="chat-header">
                <span class="room-info">Room #<span id="currentRoom"></span></span>
                <span class="user-info"><span id="currentUser"></span></span>
                <button class="btn-leave" id="leaveBtn">Ã—</button>
            </div>
            
            <div class="messages-area" id="messagesArea">
                <div id="messagesList"></div>
            </div>
            
            <div class="message-input">
                <input type="text" class="form-control" id="messageInput" placeholder="Type a message..." maxlength="500">
                <button class="btn-send" id="sendBtn">â†’</button>
            </div>
        </div>
        
        <div class="users-panel">
            <div class="users-header">
                <h6>Active Users</h6>
                <span class="users-count" id="usersCount">0</span>
            </div>
            <div class="users-list" id="usersList">
                <!-- Users will be populated here -->
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
<script src="~/js/chat.js"></script>

<style>
.chat-container {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.login-panel {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 400px;
}

.login-content h3 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #333;
    font-weight: 600;
}

.chat-panel {
    background: white;
    border-radius: 12px;
    width: 100%;
    max-width: 1000px;
    height: 600px;
    display: flex;
    flex-direction: row;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    overflow: hidden;
}

.chat-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #e9ecef;
}

.chat-header {
    background: #f8f9fa;
    padding: 1rem;
    border-bottom: 1px solid #e9ecef;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.room-info {
    font-weight: 600;
    color: #495057;
}

.user-info {
    color: #6c757d;
    font-size: 0.9rem;
}

.btn-leave {
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #dc3545;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-leave:hover {
    background: #f8d7da;
}

.messages-area {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
    background: #fafafa;
}

.message-input {
    padding: 1rem;
    border-top: 1px solid #e9ecef;
    display: flex;
    gap: 0.5rem;
}

.message-input input {
    flex: 1;
    border: 1px solid #ced4da;
    border-radius: 25px;
    padding: 0.75rem 1rem;
    outline: none;
}

.message-input input:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-send {
    background: #667eea;
    color: white;
    border: none;
    border-radius: 50%;
    width: 45px;
    height: 45px;
    cursor: pointer;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-send:hover {
    background: #5a67d8;
}

.form-control {
    border: 1px solid #ced4da;
    border-radius: 8px;
    padding: 0.75rem;
    outline: none;
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-primary {
    background: #667eea;
    border: none;
    border-radius: 8px;
    padding: 0.75rem;
    font-weight: 500;
}

.btn-primary:hover {
    background: #5a67d8;
}

.users-panel {
    width: 250px;
    background: #f8f9fa;
    display: flex;
    flex-direction: column;
}

.users-header {
    padding: 1rem;
    border-bottom: 1px solid #e9ecef;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
}

.users-header h6 {
    margin: 0;
    font-weight: 600;
    color: #495057;
}

.users-count {
    background: #667eea;
    color: white;
    font-size: 0.8rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-weight: 500;
}

.users-list {
    flex: 1;
    overflow-y: auto;
    padding: 0.5rem;
}

.user-item {
    display: flex;
    align-items: center;
    padding: 0.5rem;
    margin-bottom: 0.25rem;
    background: white;
    border-radius: 8px;
    border: 1px solid #e9ecef;
    font-size: 0.9rem;
}

.user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #667eea;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    margin-right: 0.75rem;
    font-size: 0.8rem;
}

.user-name {
    flex: 1;
    color: #495057;
    font-weight: 500;
}

.user-status {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #28a745;
}

/* Message styling improvements */
.message-bubble {
    border-radius: 18px !important;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 8px;
}

.message-bubble.own-message {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    color: white !important;
}

.message-bubble.other-message {
    background: #f8f9fa !important;
    color: #495057 !important;
    border: 1px solid #e9ecef;
}

.message-content {
    word-wrap: break-word;
    line-height: 1.4;
}

.message-time {
    font-size: 0.75rem;
    opacity: 0.8;
    margin-top: 4px;
}
</style>
